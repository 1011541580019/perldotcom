#!/usr/bin/env perl
use v5.16.0;
use warnings;
use autodie;
use File::Find::Rule;
use JSON::XS 'decode_json';

for my $filename (File::Find::Rule->file->name('*.md')->in('content')) {
  my $json;
  open my $fh, '<', $filename;
  while (<$fh>) {
    $json .= $_ if /^\s*{/ .. 0;
    last if /}\s*$/;
  }
  my $data = eval { decode_json($json) };
  if( $@ ) {
    say "$filename JSON did not parse correctly";
    next;
  }
  next if $data->{categories};
  say "$filename has no categories";
}
